spring.application.name=chatbot_backend
# Azure OpenAI configuration
spring.ai.azure.openai.endpoint=
spring.ai.azure.openai.api-key=
spring.ai.azure.openai.chat.options.deployment-name=
spring.ai.azure.openai.image.options.deployment-name=
# Database configuration
spring.datasource.url=
spring.datasource.username=
spring.datasource.password=

spring.jpa.properties.hibernate.dialect=
spring.jpa.hibernate.ddl-auto=update
# JWT configuration
jwt.secret=
# Email configuration
spring.mail.host=
spring.mail.port=587
spring.mail.username=
spring.mail.password=
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true
# Application URLs
app.backend-base-url=${BACKEND_BASE_URL:http://localhost:8080/api/v1}
app.frontend-base-url=${FRONTEND_BASE_URL:http://localhost:5173}